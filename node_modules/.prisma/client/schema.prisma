datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Category {
  id           Int           @id @default(autoincrement())
  name         String        @unique
  transactions Transaction[]
}

model Transaction {
  id          Int      @id @default(autoincrement())
  amount      Float
  description String?
  date        DateTime
  categoryId  Int
  category    Category @relation(fields: [categoryId], references: [id])
}
